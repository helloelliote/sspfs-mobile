<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kr.djgis.sspfs.ui.feature.tabs.FeatureAEdit1"
    tools:ignore="TooManyViews,HardcodedText">

  <data>

    <variable
        name="viewModel"
        type="kr.djgis.sspfs.model.FeatureViewModel" />
  </data>

  <androidx.core.widget.NestedScrollView
      android:id="@+id/nested_scrollview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingHorizontal="10dp"
      android:paddingVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TableLayout
          android:id="@+id/table1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:background="@drawable/tablelayout_border"
          android:shrinkColumns="0"
          android:stretchColumns="*"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="관리번호" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="GC35022A0001"
              android:text="@={viewModel.featureA.fac_uid}" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="주소" />

          <TextView
              android:id="@+id/fac_adm"
              style="@style/App.TableLayout.TextView.Small"
              android:layout_weight="3"
              android:hint="남선면 외하리 732천"
              android:text="@={viewModel.featureA.fac_adm}"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="소교량명" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="외하리_소교량_008"
              android:text="@={viewModel.featureA.fac_nam}" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="시점위치" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:text="자동입력" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="세천명" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="종점위치" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:text="자동입력" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              android:tag="cat_cde"
              style="@style/App.TableLayout.Label"
              android:text="교량유형" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="일반교" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="세월교" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              android:tag="typ_cde"
              style="@style/App.TableLayout.Label"
              android:layout_weight="0.75"
              android:text="교량형식" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:text="임시가설·간이소교량" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:text="산지부 소규모 배수암거" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:hint="슬래브,라멘,암거,흄관" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:text="시설부속물" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:hint="0"
              android:inputType="number"
              android:text="@={viewModel.featureA.sub_cnt}" />

          <Button
              style="@style/App.TableLayout.Label"
              android:text="부속물유형" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:layout_weight="2"
              android:hint="날개벽, 낙차공 등"
              android:text="@={viewModel.featureA.sub_txt}" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              android:tag="fun_cde"
              style="@style/App.TableLayout.Label"
              android:layout_weight="1"
              android:text="연결도로" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="개인사유지 연결 소교량" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="법정하천내 포함 소교량" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              android:tag="pos_cde"
              style="@style/App.TableLayout.Label"
              android:text="시설위치" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:text="선정제외①" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:text="사유지②" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:text="관리지역③" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:text="제한지역④" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              style="@style/App.TableLayout.TextView"
              android:text="①소규모 시설내 소교량 ②분쟁,민원지역 ③농업진흥,도시,계획지역 ④군부대 등" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:text="조사자 의견" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:layout_weight="4"
              android:hint="콘크리트 탈락, 균열 및 철근 노출, 교량의 육안상 기울기"
              android:text="@={viewModel.featureA.exm_opi}" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="현장조사일" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="자동입력"
              android:text="@{viewModel.featureA.exm_ymd_date}"
              android:focusable="false" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="현장조사자" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="홍길동"
              android:text="@={viewModel.featureA.exm_nam}" />
        </TableRow>

      </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>
</layout>
