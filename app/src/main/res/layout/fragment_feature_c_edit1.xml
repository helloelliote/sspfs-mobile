<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kr.djgis.sspfs.ui.feature.tabs.FeatureCEdit1"
    tools:ignore="TooManyViews,HardcodedText">

  <data>

    <variable
        name="viewModel"
        type="kr.djgis.sspfs.model.FeatureViewModel" />
  </data>

  <androidx.core.widget.NestedScrollView
      android:id="@+id/nested_scrollview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingHorizontal="10dp"
      android:paddingVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TableLayout
          android:id="@+id/table1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:background="@drawable/tablelayout_border"
          android:stretchColumns="*"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="관리번호" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="GC35022A0001" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="주소" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="서후면 성곡리 1006구" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="취입보명" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="성곡리_소교량_015" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="시점위치" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="서후면 성곡리 1006구" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="세천명" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="성곡리_세천_004" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="종점위치" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="서후면 성곡리 1006구" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:text="교량유형" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:layout_weight="4"
              android:hint="자연형, 콘크리트형, 기타" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:text="시설부속물" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:hint="2" />

          <Button
              style="@style/App.TableLayout.Label"
              android:text="부속물유형" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:layout_weight="2"
              android:hint="날개벽, 교량 등" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="기능 및 형태" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="해당없음" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="산지 소규모 시설" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="관련계획상 철거 예정" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="취수기능 필요성 상실" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="시설위치" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="해당없음" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="3"
              android:text="사유지 (분쟁 및 민원지역)" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="3"
              android:text="법정하천내" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:text="" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="타법에 의한 관리지역\n(농업진흥, 도시, 계획지역)" />

          <TextView
              style="@style/App.TableLayout.TextView.Select"
              android:layout_weight="2"
              android:text="선정제외 세천내" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:text="조사자 의견" />

          <EditText
              style="@style/App.TableLayout.EditText"
              android:layout_weight="4"
              android:hint="콘크리트 탈락, 균열 및 철근 노출" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="현장조사일" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="2022-00-00" />

          <Button
              style="@style/App.TableLayout.Label"
              android:layout_weight="2"
              android:text="현장조사자" />

          <TextView
              style="@style/App.TableLayout.TextView"
              android:layout_weight="3"
              android:hint="000" />

        </TableRow>

      </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>
</layout>
