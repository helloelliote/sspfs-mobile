                        android:layout_height="match_parent">

                    <TextView
                            style="@style/App.TableLayout.TextView"
                            android:text="" />

                    <TextView
                            style="@style/App.TableLayout.TextView"
                            android:layout_weight="3"
                            android:text="8) 제한지역 내 (군부대 등)" />

                    <TextView
                            style="@style/App.TableLayout.TextView"
                            android:text="여" />

                    <TextView
                            style="@style/App.TableLayout.TextView"
                            android:text="부" />

                    <TextView style="@style/App.TableLayout.TextView" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/App.TableLayout.TextView"
                        android:text="선정여부" />

                    <TextView
                        style="@style/App.TableLayout.TextView"
                        android:text="선정" />

                    <TextView
                        style="@style/App.TableLayout.TextView"
                        android:background="@color/red_A100"
                        android:text="선정제외" />
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
