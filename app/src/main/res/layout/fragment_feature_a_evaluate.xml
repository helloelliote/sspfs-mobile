                    <TextView style="@style/App.TableLayout.TextView" />
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            style="@style/App.TableLayout.TextView"
                            android:text="연결도로" />

                    <TextView
                            style="@style/App.TableLayout.TextView"
                            android:layout_weight="3"
                            android:text="3) 개인 사유지 연결 소교량" />

                    <TextView
